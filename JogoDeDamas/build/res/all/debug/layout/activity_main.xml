<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/layoutAtividade"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="20sp" >
        <LinearLayout 
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical" >
            <TextView 
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="Jogada de :"/>
            <TextView 
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:text=""
                android:id="@+id/textJogadorAtual"/>
        </LinearLayout>
        
        <LinearLayout 
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical" >
            <TextView 
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="Tempo time branco :"/>
            <TextView 
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:id="@+id/textRelogioBranco"
                android:text="30 min 00 s"/>
        </LinearLayout>
        
        <LinearLayout 
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical" >
            <TextView 
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="Tempo time preto :"/>
            <TextView 
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:id="@+id/textRelogioPreto"
                android:text="30 min 00 s"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/layoutHistorico"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textHistorico"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Histórico de jogadas:" />
            <ListView 
                android:layout_width="250dp"
                android:layout_height="fill_parent"
                android:id="@+id/listviewHistorico" />
            <Button 
                android:id="@+id/buttonExibirHistorico"
                android:text="Exibir histórico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp" 
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout 
        android:id="@+id/layoutTabuleiro"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" ></RelativeLayout>

</LinearLayout>
